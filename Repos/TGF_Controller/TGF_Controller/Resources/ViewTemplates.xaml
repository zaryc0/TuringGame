<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"                    
                    xmlns:v ="clr-namespace:TGF_Controller.View"
                    xmlns:vm="clr-namespace:TGF_Controller.ViewModel">

    <DataTemplate DataType="{x:Type vm:InitialViewVM}">
        <v:InitialView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:MonitoringVM}">
        <v:MonitoringView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:RoomVM}">
        <v:RoomView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:WaitingVM}">
        <v:WaitingView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:RoomClosedVM}">
        <v:RoomClosedView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:MessageVM}">
        <v:MessageView/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:Message2VM}">
        <v:MessageView2/>
    </DataTemplate>

</ResourceDictionary>